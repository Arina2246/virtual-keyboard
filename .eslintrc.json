{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "quotes": ["error", "double"],
        "max-classes-per-file": ["error", 2],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "class-methods-use-this": ["error", { "exceptMethods": ["addEngLabels", "addRusLabels","addDown","hideDown","addUp","hideUp","addCaps","hideCaps","addShiftCaps","hideShiftCaps","addHighlight","addLanguage","addWrapperHeader","addWrapper","deleteRus","deleteEng","addKeyboardButtons","addTextArea","addContent","addContentP","addWrapperKeyboard","addKeyboardLine1","addKeyboardLine2","addKeyboardLine3","addKeyboardLine4","addKeyboardLine5","addDisplayButtons"] }],
       "func-names": ["error", "never"],
       "import/extensions": ["error",  "always" ],
       "operator-linebreak": ["error", "after"]
    }
}

 
